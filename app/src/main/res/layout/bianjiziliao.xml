<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffdadada">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffe14723"
         >
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/bianjixinxi_fh"
            android:layout_width="80dp"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑信息"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/bianjixinxi_bc"
            android:layout_width="80dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/android_146"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_weight="0.75"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textSize="20sp"
                            android:textColor="#ffdadada"
                            />
                        <EditText
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="XXX"
                            android:textSize="20sp"
                            android:textColor="#ffdadada"
                            android:layout_weight="0.73"
                            android:id="@+id/bjxx_nc"
                            android:singleLine="true" />
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/android_146"
                    android:gravity="center_vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_weight="1.23"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别 "
                            android:textSize="20sp"
                            android:textColor="#ffdadada"/>
                        <Spinner


                            android:layout_marginLeft="5dp"
                            android:layout_width="144dp"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:text="男"
                            android:textSize="20sp"
                            android:textColor="#ffdadada"
                            android:id="@+id/sex" />
                    </LinearLayout>



                </LinearLayout>

                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/android_148"
                android:gravity="center"
                android:id="@+id/sz_touxiang">
                <boom.boom.myview.RoundedImageView
                    android:id="@+id/bianjiziliao_touxiang"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/android_150"/>

                </LinearLayout>


            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/android_147"
                android:weightSum="1">
                <LinearLayout
                    android:layout_weight="0.9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄 "
                        android:textSize="20sp"
                        android:textColor="#ffdadada"/>
                    <EditText
                        android:background="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="15"
                        android:textSize="20sp"
                        android:textColor="#ffdadada"
                        android:layout_weight="0.5"
                        android:id="@+id/bjxx_nl"
                        android:singleLine="true"
                        android:numeric="integer|decimal"
                        android:maxLength="2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_marginLeft="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_145"/>

                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/android_147"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星座 "
                        android:textSize="20sp"
                        android:textColor="#ffdadada"/>
                    <Spinner
                        android:background="#ffffff"



                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="双鱼座"
                        android:textSize="20sp"
                        android:textColor="#ffdadada"
                        android:layout_weight="0.5"
                        android:id="@+id/star" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_145"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/android_149"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名 "
                        android:textSize="20sp"
                        android:textColor="#ffdadada"/>
                    <EditText
                        android:background="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="#ffdadada"
                        android:layout_weight="0.73"
                        android:id="@+id/gexingqianming"
                        android:singleLine="true" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_145"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/android_147">
            <LinearLayout

                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业 "
                    android:textSize="20sp"
                    android:textColor="#ffdadada"/>
                <EditText
                    android:background="#ffffff"

                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="学生"
                    android:textSize="20sp"
                    android:textColor="#ffdadada"
                    android:layout_weight="0.16"
                    android:id="@+id/bjxx_zy"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="0.86">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_145"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/suozaidi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:gravity="center_vertical"
        android:background="@drawable/android_147">
            <LinearLayout

                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地 "
                    android:textSize="20sp"
                    android:textColor="#ffdadada"/>

                <TextView

                    android:focusable="false"
                    android:background="#ffffff"

                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="辽宁大连"
                    android:textSize="18sp"
                    android:textColor="#ffdadada"
                    android:layout_weight="0.60"
                    android:id="@+id/bjxx_szd"
                    android:singleLine="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1.04">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_145"/>

            </LinearLayout>

    </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_147"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_weight="0.75"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校 "
                    android:textSize="20sp"
                    android:textColor="#ffdadada"/>
                <EditText
                    android:background="#ffffff"

                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="大连东软信息学院"
                    android:textSize="20sp"
                    android:textColor="#ffdadada"
                    android:layout_weight="0.5"
                    android:id="@+id/bjxx_xx"
                    android:singleLine="true" />
            </LinearLayout>


    </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_149"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_weight="0.75"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司 "
                    android:textSize="20sp"
                    android:textColor="#ffdadada"/>
                <EditText
                    android:background="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="东软集团"
                    android:textSize="20sp"
                    android:textColor="#ffdadada"
                    android:layout_weight="0.5"
                    android:id="@+id/bjxx_gs"
                    android:singleLine="true" />
            </LinearLayout>


    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_149"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_weight="0.75"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱 "
                android:textSize="20sp"
                android:textColor="#ffdadada"/>
             <EditText
                 android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="spennlee@163.com"
                android:textSize="20sp"
                android:textColor="#ffdadada"
                android:layout_weight="0.5"
                 android:id="@+id/bjxx_yx"
                 android:singleLine="true" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

</LinearLayout>
