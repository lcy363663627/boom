<?xml version="1.0" encoding="utf-8"?>
<boom.boom.myview.SildingFinishLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/sildingFinishLayout">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffdadada"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffe14723"

        >
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="fill_parent"
            android:id="@+id/mmzh_phone_fh"
            android:gravity="center_vertical"
            >
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/android_51"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机密码找回"
            android:textSize="23dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:src="@drawable/android_101"
            android:layout_gravity="bottom" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <EditText

            android:id="@+id/zhuceyonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_17"
            android:hint="请输入手机号"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@id/zhuceyonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_102"
            android:hint="请输入验证码"
            android:gravity="center"
            android:id="@+id/zhmm_yanzhengma"
            />
        <Button
            android:id="@+id/yanzheng_btn"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/zhmm_yanzhengma"
            android:layout_below="@id/zhuceyonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_103"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#eeeeee"
            android:textSize="17sp"/>
        <EditText
            android:layout_below="@id/zhmm_yanzhengma"
            android:id="@+id/newpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_17"
            android:hint="请输入新密码"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/zhmm_text"
            android:layout_below="@id/newpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     密码必须含有a-z字母以及阿拉伯数字"
            android:textColor="#FF0000"

            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/zhaohuimima_commit"
            android:layout_below="@id/zhmm_text"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_65"
            android:text="提交"
            android:textSize="18sp"
            android:textColor="#eeeeee"/>
    </RelativeLayout>

</LinearLayout>
</boom.boom.myview.SildingFinishLayout>