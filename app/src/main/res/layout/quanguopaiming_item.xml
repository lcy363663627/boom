<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/android_123"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_124"
                    android:layout_marginLeft="10dp"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_121"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
                </FrameLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:focusable="false"
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"

                android:layout_marginLeft="10dp">
                <TextView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="斜立易拉罐"
                    android:textSize="20sp"
                    android:textColor="#FF4444"
                    android:layout_marginTop="15dp"
                    android:id="@+id/qgph_nickname" />
                <TextView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="观看次数10000次"

                    android:textColor="#ffb7b7b7"
                    android:layout_marginTop="12dp"
                    android:id="@+id/qgph_count" />
                <!--文本框内显示内容从服务器当中读取-->
                <LinearLayout
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_125"/>
                    <TextView
                        android:focusable="false"
                        android:id="@+id/qgph_addr"
                        android:layout_width="67dp"
                        android:layout_height="20dp"
                        android:textSize="13sp"
                        android:textColor="#ff6a6a6a"
                        android:singleLine="true" />
                    <ImageView
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_126"
                        android:layout_marginLeft="0dp"/>
                    <TextView
                        android:focusable="false"
                        android:id="@+id/qgph_committime"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:textSize="13sp"
                        android:textColor="#ff6a6a6a"
                        android:singleLine="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_122"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15s"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:id="@+id/qgph_usedtime" />
                </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
