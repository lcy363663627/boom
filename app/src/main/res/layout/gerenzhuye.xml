<?xml version="1.0" encoding="utf-8"?>
<boom.boom.myview.SildingFinishLayout
    android:id="@+id/sildingFinishLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffdadada"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffe14723"
        android:orientation="horizontal"
        android:gravity="center"


        >
        <LinearLayout
            android:id="@+id/gerenzhuyefanhui"
            android:layout_weight="0.53"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/zhucufanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/android_20"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人主页"
                android:textSize="25sp"
                android:textColor="#eeeeee"


                />
            <Button
                android:id="@+id/liuyan_button"

                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:background="#ffe14723"
                android:text="留言"
                android:textSize="20sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/gerenzhuye_yincang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_113"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <boom.boom.myview.CircleImageView
            android:id="@+id/gerenzhuye_touxiang"
            android:layout_marginTop="40dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android_114"
            />
        <TextView
            android:id="@+id/gerenzhuye_yonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20sp"
            android:textColor="#eaeaea"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/gerenzhuye_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/android_115"
            android:text="服务器上的个性签名"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#eeeeee"
            android:layout_marginTop="5dp"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/android_117">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/grzy_1"
            android:textIsSelectable="false"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="视频挑战"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:textIsSelectable="false"
            android:id="@+id/grzy_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="留言板"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:textIsSelectable="false"
            android:id="@+id/grzy_3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="详细资料"
            android:textSize="20sp"
            android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gundongtiao"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/android_116"/>
            </LinearLayout>
    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/id_viewpager"
        />




</LinearLayout>

</boom.boom.myview.SildingFinishLayout>