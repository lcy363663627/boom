<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/android_98"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="圣诞有礼 挑战积分双倍送！"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:password="false"
            android:textColor="#ffe24723"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="89dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            android:background="@drawable/android_99"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="活动期间 参与挑战可双倍获得积分！\n还有积分排名好礼相送！\n第1名 Macbook pro\n第2-3名 iPhone 6 Plus\n第4-5名 iPhone 6\n第6-10名 iPad Air2\n赶快积攒挑战积分吧！"
            android:id="@+id/textView16"
            android:textColor="#ff959595"
            android:layout_gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:id="@+id/imageView9"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/android_97"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2014.12.31 21:56"
            android:id="@+id/textView17"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ff020202"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="45dp" />

        <Button
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/android_100" />

    </FrameLayout>
</LinearLayout>