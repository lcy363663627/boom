<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffdadada"
    android:gravity="center">

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <boom.boom.myview.XListView


        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView4"

        android:layout_marginLeft="10dp"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="10dp"
        android:divider="#ffdadada" />
    <LinearLayout
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/android_195"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="添 加 好 友"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />
        </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="同意添加"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           android:background="@drawable/android_222" />
        <Button
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="拒绝添加"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/android_221" />
    </LinearLayout>


</FrameLayout>
</LinearLayout>
