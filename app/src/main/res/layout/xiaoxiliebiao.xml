<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/android_94"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="发布的挑战已经通过审核！"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:password="false"
            android:textColor="#ffe24723"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="89dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            android:layout_gravity="center_vertical"
            android:background="@drawable/android_95"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:id="@+id/imageView8"
            android:layout_gravity="left|top"
            android:background="@drawable/android_96"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="挑战”斜立易拉罐“已经通过审核"
            android:id="@+id/textView16"
            android:textColor="#ff959595"
            android:layout_gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_marginRight="40dp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:id="@+id/imageView9"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/android_97"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2014.12.31 21:56"
            android:id="@+id/textView17"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ff020202"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp" />

    </FrameLayout>
</LinearLayout>