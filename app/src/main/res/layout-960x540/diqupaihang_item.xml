<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/android_123">
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/android_122"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15s"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:id="@+id/dqph_suoluotu"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_124"


            />
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_121"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dqph_suoluotu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="22sp"
                android:textColor="#FF4444"
                android:layout_marginTop="15dp"
                android:id="@+id/title" />
            <TextView
                android:layout_below="@id/title"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="观看次数10000次"

                android:textColor="#ffb7b7b7"
                android:layout_marginTop="5dp"
                android:id="@+id/count" />
            <ImageView
                android:layout_below="@id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_125"
                android:id="@+id/weizhi_little"
                />
            <TextView
                android:layout_toRightOf="@id/weizhi_little"
                android:layout_below="@id/count"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:text="辽宁大连"
                android:textSize="11sp"
                android:textColor="#ff6a6a6a"
                android:id="@+id/weizhi"
                android:singleLine="true"/>
            <ImageView
                android:layout_toRightOf="@id/weizhi"
                android:layout_below="@id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_126"

                android:id="@+id/dqph_time"/>
            <TextView
                android:layout_below="@id/count"
                android:layout_toRightOf="@id/dqph_time"
                android:layout_width="90dp"
                android:layout_height="15dp"
                android:text="完成用时10s"
                android:textSize="11sp"
                android:textColor="#ff6a6a6a"
                android:singleLine="true"/>
            </RelativeLayout>
        </RelativeLayout>
