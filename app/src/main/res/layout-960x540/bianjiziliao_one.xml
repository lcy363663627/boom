<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffdadada"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffe14723"
        >
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/bianjixinxi_fh"
            android:layout_width="80dp"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑信息"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/bianjixinxi_baocun"
            android:layout_width="80dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/bianjixinxi_left_avter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/bianjixinxi_one"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_nicheng"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="昵称"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_nicheng"
                android:background="#ffffff"
                android:text="XXX"
                android:textSize="20sp"
                android:textColor="#ffdadada"
                android:layout_weight="0.73"
                android:id="@+id/bjxx_nc"
                android:singleLine="true"
              />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bianjixinxi_two"
            android:layout_below="@id/bianjixinxi_one"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_nianling"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="性别"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <Spinner


                android:layout_marginLeft="25dp"
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:text="男"
                android:textSize="20sp"
                android:textColor="#ffdadada"
                android:id="@+id/sex"
                android:layout_toRightOf="@id/bianjixinxi_nianling"/>

        </RelativeLayout>
        <boom.boom.myview.RoundedImageView
            android:id="@+id/bianjiziliao_touxiang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/android_150"
           android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"/>
        <RelativeLayout
            android:id="@+id/bianjixinxi_three"
            android:layout_below="@id/bianjixinxi_two"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_xingbie"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="年龄"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:background="#ffffff"
                android:layout_marginLeft="25dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="15"
                android:textSize="20sp"
                android:textColor="#ffdadada"
                android:layout_weight="0.5"
                android:id="@+id/bjxx_nl"
                android:singleLine="true"
                android:numeric="integer|decimal"
                android:maxLength="2"
                android:layout_toRightOf="@id/bianjixinxi_xingbie"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bianjixinxi_four"
            android:layout_below="@id/bianjixinxi_three"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_xingzuo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="星座"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:background="#ffffff"
                android:layout_marginLeft="25dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="双鱼座"
                android:textSize="20sp"
                android:textColor="#ffdadada"
                android:layout_weight="0.5"
                android:id="@+id/star"
                android:layout_toRightOf="@id/bianjixinxi_xingzuo"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bianjixinxi_five"
            android:layout_below="@id/bianjixinxi_four"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_gexingqianming"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="签名"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="250dp"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_gexingqianming"
                android:background="#ffffff"
                android:id="@+id/gexingqianming"
                android:singleLine="true"
                android:textColor="#ffdadada"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/bianjixinxi_six"
            android:layout_below="@id/bianjixinxi_five"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_zhiye"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="职业"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="250dp"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_zhiye"
                android:background="#ffffff"
                android:id="@+id/bjxx_zy"
                android:singleLine="true"
                android:textColor="#ffdadada"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"/>




        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/bianjixinxi_seven"
            android:layout_below="@id/bianjixinxi_six"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_suozaidi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="所在地"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <TextView

                android:focusable="false"
                android:background="#ffffff"

                android:layout_marginLeft="5dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="辽宁大连"
                android:textSize="18sp"
                android:textColor="#ffdadada"
                android:layout_weight="0.60"
                android:id="@+id/bjxx_szd"
                android:singleLine="true"
                android:layout_toRightOf="@id/bianjixinxi_suozaidi"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"/>




        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/bianjixinxi_eight"
            android:layout_below="@id/bianjixinxi_seven"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_xuexiao"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="学校"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="250dp"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_xuexiao"
                android:background="#ffffff"
                android:id="@+id/bjxx_xx"
                android:singleLine="true"
                android:textColor="#ffdadada"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"/>




        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/bianjixinxi_nine"
            android:layout_below="@id/bianjixinxi_eight"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_gongsi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="公司"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="250dp"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_gongsi"
                android:background="#ffffff"
                android:id="@+id/bjxx_gs"
                android:textColor="#ffdadada"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"

                android:singleLine="true"/>




        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/bianjixinxi_ten"
            android:layout_below="@id/bianjixinxi_nine"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/android_146"
            >
            <TextView
                android:id="@+id/bianjixinxi_youxiang"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="邮箱"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_toRightOf="@id/bianjixinxi_youxiang"
                android:background="#ffffff"
                android:id="@+id/bjxx_yx"
                android:singleLine="true"
                android:textColor="#ffdadada"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_145"
                />




        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
