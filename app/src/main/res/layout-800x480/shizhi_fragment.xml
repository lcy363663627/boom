<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffdadada">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/sz_xggrzl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:layout_marginTop="10dp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="修改个人资料"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"/>
                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/android_52"
                        android:layout_marginLeft="200dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_mmxg"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57">
                    <TextView

                        android:id="@+id/sz_mmxg1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="修改密码"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"/>
                    <Button
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/android_52"
                        android:layout_marginLeft="233dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="通知震动"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"/>
                    <ToggleButton
                        android:id="@+id/sz_toggle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="true"
                        android:background="@drawable/toggle_btn"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57">
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="通知声音"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"/>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="通知声音"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"/>

                    <ToggleButton

                        android:id="@+id/sz_toggle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="true"
                        android:background="@drawable/toggle_btn"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="省流量模式"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="仅wifi模式播放"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:paddingLeft="120dp"
                        />
                    <ToggleButton
                        android:id="@+id/sz_toggle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="true"
                        android:background="@drawable/toggle_btn"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="隐私设置"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_jinzijikejian"

                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="仅自己可见"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />
                    <ImageView
                        android:layout_marginRight="60dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:id="@+id/sz_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_175"
                        android:layout_marginLeft="180dp"
                        android:visibility="invisible"/>



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_jinhaoyoukejian"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="仅好友可见"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />
                    <ImageView
                        android:layout_marginRight="60dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:id="@+id/sz_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_175"
                        android:layout_marginLeft="180dp"
                        android:visibility="invisible"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_suoyourenkejian"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="所有人可见"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />
                    <ImageView
                        android:layout_marginRight="60dp"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:id="@+id/sz_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_175"
                        android:layout_marginLeft="180dp"
                        android:visibility="invisible"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_bbyfk"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="帮助与反馈"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sz_gywm"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/android_57">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="关于我们"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textSize="17sp"
                        />

                </RelativeLayout>

                <Button

                    android:id="@+id/tuichuzhanghu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/android_59"
                    android:layout_marginTop="7dp"
                    android:text="退出账户"
                    android:textSize="20sp"
                    android:textColor="#dddddd"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#ffdadada"
                    android:layout_alignParentBottom="true">

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
